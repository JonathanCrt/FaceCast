extends layout
block content
    div#main
            section(id='ListCandidacy', class='four')
                div.container
                    header
                        h2= title 
                        br
                        
                        table
                            div.row
                                div(class='6u 12u$(mobile)')
                                    tr
                                        th NameEvenement
                                        th Last name
                                        th First name
                                        th Role
                                        th Etat
                                        th Update
                                div(class='6u 12u$(mobile)')
                                    tr
                                    each candidacyTab, i in candidacy
                                        tr
                                            td
                                                each offer in candidacyTab.offer
                                                    =offer.nameEvenement
                                            td
                                                each extra in candidacyTab.extra
                                                    =extra.last_name
                                            td
                                                each extra in candidacyTab.extra
                                                    =extra.first_name
                                            td
                                                each offer in candidacyTab.offer
                                                    =offer.role
                                            td
                                                form(action="../candidacy/update/" + candidacyTab._id, method="post")
                                                    select(name="etat")
                                                        option(value = candidacyTab.etat) 
                                                            = candidacyTab.etat
                                                        each val in ['Waiting','Accepted','Refuse','Retained','Completed']
                                                            if val != candidacyTab.etat
                                                                option(value = val) 
                                                                    =val   
